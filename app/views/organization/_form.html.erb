  <% content_for :actions do %>
    <%= link_to "Salvar", "#", class: "btn btn-primary pull-right", onclick: "$('##{f.options[:html][:id]}').submit()" %>
  <% end %>
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <%= render partial: "layouts/float_header", locals: { title: "Identificação" } %>
        <div class="ibox-content">
          <div class="form-horizontal m-t-md">
            <%= f.text_field :name, class: "form-control" %>
            <%= f.text_field :full_name, class: "form-control" %>
            <%= f.text_field :cnpj, class: "form-control" %>
            <%= f.form_group do %>
              <%= f.check_box :is_company %>
              <%= f.check_box :is_client %>
              <%= f.check_box :is_vendor %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-7">
      <div class="ibox float-e-margins">
        <%= render partial: "layouts/float_header", locals: { title: "Localização" } %>
        <div class="ibox-content">
          <div class="form-horizontal m-t-md">
            <%= f.text_field :address1, class: "form-control" %>
            <%= f.text_field :address2, class: "form-control" %>
            <%= f.text_field :address3, class: "form-control" %>
            <%= f.text_field :zipcode, class: "form-control" %>
            <%= f.text_field :city, class: "form-control" %>
            <%= f.text_field :state, class: "form-control" %>
            <%= f.text_field :country, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-5">
      <div class="ibox float-e-margins">
        <%= render partial: "layouts/float_header", locals: { title: "Outras informações" } %>
        <div class="ibox-content">
          <div class="form-horizontal m-t-md">
            <%= f.text_field :website, class: "form-control" %>
            <%= f.text_field :primary_email, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  </div>