<% content_for :title, "Editar #{@user.first_name} #{@user.last_name}" %>
<% breadcrumb :edit_user, @user %>

<%= bootstrap_form_for @user, id: "user", layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10" do |f| %>
  <%= render partial: "form", locals: { user: @user, f: f } %>
<% end %>