  <% content_for :actions do %>
    <%= link_to "Salvar", "#", class: "btn btn-primary pull-right", onclick: "$('##{f.options[:html][:id]}').submit()" %>
  <% end %>
  <div class="row">
    <div class="col-lg-12">
      <%= ibox title: "Editar Perfil" do %>
        <div class="row">
          <div class="col-sm-12 b-r">
            <%= f.select :organization_id, options_for_select(Organization.all.map {|s| [s.name, s.id]}, @user.organization_id), {}, class:  "form-control" %>
            <%= f.email_field :email, autofocus: true, placeholder: "E-mail" %>
            <%= f.text_field :first_name, autofocus: true, placeholder: "Nome" %>
            <%= f.text_field :last_name, autofocus: true, placeholder: "Sobrenome" %>
            <%= f.text_field :location, autofocus: true, placeholder: "Cidade, Estado" %>
            <%= f.text_field :about, autofocus: true, placeholder: "Sobre..." %>
            <%= f.text_field :profile_picture, placeholder: "Caminho para imagem do perfil" %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
            <%= f.form_group do %>
              <%= f.check_box :admin, inline: true %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>